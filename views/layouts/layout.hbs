<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="/public/css/banner.css">
    <link rel="stylesheet" type="text/css" href="/public/css/login.css">
    <link rel="stylesheet" type="text/css" href="/public/css/index.css">
    <link rel="stylesheet" type="text/css" href="/public/css/postimage.css">
    <link rel="stylesheet" type="text/css" href="/public/css/registration.css">
    <script defer type="text/javascript" src = "/public/js/frontend.js"></script>
    <link rel="stylesheet" type="text/css" href="/public/css/viewpost.css">
    <link rel="stylesheet" type="text/css" href="/public/css/imagepost.css">
</head>
  <body>
    {{log this}}
    {{> banner}}
    {{> nav}}
    {{#if (emptyObject messages)}}
    {{> flashmessage}}
    {{/if}}
    {{{body}}}
    {{> footer}}

    {{#if logged}}
      <script>
        let ele = document.getElementById('logout');
        if(ele){
          ele.onclick = (even) => {
            fetch('/users/logout',{
              method: "POST"
            })
            .then((data) => {
              location.replace('/');
            })
          }
        }
      </script>
    {{/if}}
  </body>
</html>
